
<div class="container">
  <h1 class="title-profile">プロフィール</h1>
  <div class="row">
    <div class="col-md-8">
      <h3 class="show-user-name"><%= @user.name %> (<%= @user.relationship %>)</h3>
      <div>
        <%= @user.introduction %>
      </div>
      <% if user_signed_in? && current_user[:id] == @user.id%>
        <div class="account-edit">
          <%= link_to "ユーザー情報編集", edit_user_registration_path(current_user), class:"btn" %>
          <%=link_to 'もどる', root_path, class:"btn" %>
        </div>
      <% else %>
        <div class="account-edit">
          <%=link_to 'もどる', root_path, class:"btn" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

