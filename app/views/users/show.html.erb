
<div class="container">
  <h3 class="title-profile">プロフィール</h3>
  <div class="row">
    <div class="col-md-8">
      <h4 class="show-user-name"><%= @user.name %></h4>
      <P> (<%= @user.relationship %>) </P>
      <div>
        <%= @user.introduction %>
      </div>
      <% if current_user == @user %>
        <div class="account-edit">
          <%= link_to "ユーザー情報編集", edit_user_path(current_user) %>
        </div>
      <% end %>
    </div>
  </div>
</div>