<div class='account-page' id='account-page'>
  <div class='account-page__inner clearfix'>
    <div class='account-page__inner--left account-page__header'>
      <h2>ユーザー情報編集</h2>
      <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'btn'%>
      <%= link_to "トップページに戻る", root_url, class: 'btn'%>
    </div>
    <div class='account-page__inner--right user-form'>
      <%= form_with(model: current_user, local: true) do |f| %>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :name%>
          </div>
          <div class='field-input'>
            <%= f.text_field :name, autofocus: true%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :email%>
          </div>
          <div class='field-input'>
            <%= f.email_field :email%>
          </div>
        </div>
        <div class="field">
          <div class='field-label'>
            <%= f.label :relationship%>
          </div>
          <div class='field-input'>
            <%= f.text_field :relationship%>
          </div>
        </div>
        <div class="field">
          <div class='field-label'>
            <%= f.label :introduction%>
          </div>
          <div class='field-input'>
            <%= f.text_area :introduction%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :password%><p>本人確認の為、登録したパスワードを入力してください。</p>
          </div>
          <div class='field-input'>
            <%= f.password_field :password%>
          </div>
        </div>
        <div class='actions'>
          <%= f.submit "更新", class: 'btn'%>
        </div>
      <% end %>
    </div>
  </div>
</div>
